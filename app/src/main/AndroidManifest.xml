<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.islbd.kothabondhu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".KthBndhApp"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".document.DocumentActivity" /> <!-- android:theme="@style/FullScreen" -->
        <activity
            android:name=".ui.activity.AboutActivity"
            android:theme="@style/AppThemeSecond" />
        <activity android:name=".ui.activity.AgentProfileActivity" />
        <activity
            android:name=".ui.activity.AgentHomeActivity"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:excludeFromRecents="true" />
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.LoginActivity" />
        <activity
            android:name=".ui.activity.HomeTabActivity"
            android:theme="@style/AppTheme.Customlayout">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".ui.activity.NewsActivity" />
        <activity android:name=".ui.activity.RegistrationActivity" />

        <activity
            android:name=".ui.activity.MenuActivity"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".ui.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.activity.JokesActivity" />
        <activity android:name=".ui.activity.BeautyActivity" />
        <activity android:name=".ui.activity.LoveActivity" />
        <activity android:name=".ui.activity.PaymentMethodActivity" />
        <activity android:name=".ui.activity.MyAccountActivity" />
        <activity android:name=".ui.activity.PackagesActivity" />
        <activity android:name=".ui.activity.VideoPlayerActivity" />
        <activity
            android:name=".ui.activity.PhoneVerifyActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_phone_verify"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".ui.activity.CallOnGoingActivity" />
        <activity android:name=".ui.activity.CallIncomingActivity" />

        <service
            android:name=".service.FcmListenerService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>



        <!--<service
            android:name=".service.FcmListenerService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>-->


        <service
            android:name=".service.SinchService"
            android:enabled="true"
            android:exported="true" />

    </application>

</manifest>