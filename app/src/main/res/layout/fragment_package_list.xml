<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.islbd.kothabondhu.ui.fragment.PackageListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/package_list_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/background_border"
            android:layout_below="@id/package_list_recyclerView"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTitlePackageList"
                android:text="@string/নির্দেশনা"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:fontFamily="@font/baloo_regular"
                android:textStyle="bold"
                android:textSize="40sp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/textViewTitlePackageList">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/baloo_regular"
                android:text="@string/বর্ণনা"
                android:id="@+id/textViewAllPackageList"/>
        </ScrollView>


        <!--<Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/continue_button"
            android:id="@+id/buttonContinuePackageList"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="65dp"
            android:layout_centerHorizontal="true"/>-->


    </RelativeLayout>

</RelativeLayout>


