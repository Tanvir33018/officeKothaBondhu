<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.islbd.kothabondhu.ui.activity.ReceiveCallActivity">

    <TextView
        android:id="@+id/call_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Bruce Owen"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/light_blue_50"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/call_dialing_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/call_name_textView"
        android:gravity="center"
        android:text="Calling....."
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/light_blue_50" />

    <ImageView
        android:id="@+id/call_contact_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/call_dialing_textView"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:src="@drawable/ic_person" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/call_accept"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="15dp"
            android:src="@drawable/ic_callaccept" />

        <ImageView
            android:id="@+id/call_dismiss"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@drawable/ic_calldismiss" />
    </RelativeLayout>

</RelativeLayout>
