<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSplash"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="net.islbd.kothabondhu.ui.activity.PhoneVerifyActivity">

    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/kth" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin5"
        android:padding="@dimen/margin5"
        android:visibility="gone">

        <EditText
            android:id="@+id/phone_verify_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/stat_sys_vp_phone_call"
            android:ems="10"
            android:hint="Phone number"
            android:inputType="phone" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/verify_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin5"
        android:padding="15dp"
        android:text="LOG IN WITH GMAIL"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>
