<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parentLayout2"
    android:background="@drawable/layout_rounded_corner"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="Catagory"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:fontFamily="@font/borson_rrr_ansi_v2"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_corner_shape"
        android:id="@+id/messageCatagory" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="This Title"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/borson_rrr_ansi_v2"
        android:padding="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_corner_shape"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/messageTitle"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Body"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_below="@id/messageTitle"
        android:id="@+id/messageBody"/>

       <!--android:ems="3"-->



</RelativeLayout>