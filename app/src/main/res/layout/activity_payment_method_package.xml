<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="net.islbd.kothabondhu.ui.activity.PaymentMethodActivity">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin4"
        app:cardBackgroundColor="@color/purple_100">

        <ImageView
            android:id="@+id/payment_bkash_imageView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:padding="@dimen/general_padding"
            android:src="@drawable/bkash_limited_logo" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin4"
        app:cardBackgroundColor="@color/purple_100">

        <ImageView
            android:id="@+id/payment_rocket_imageView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:padding="@dimen/general_padding"
            android:src="@drawable/mlogo" />
    </android.support.v7.widget.CardView>

</LinearLayout>
