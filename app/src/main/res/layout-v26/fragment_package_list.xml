<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.islbd.kothabondhu.ui.fragment.PackageListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/package_list_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:layout_below="@id/package_list_recyclerView"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTitlePackageList"
            android:text="@string/_20_min_40_tk"
            android:fontFamily="@font/baloo_regular"
            android:textStyle="bold"
            android:textSize="40sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_below="@id/textViewTitlePackageList"
            android:justificationMode="inter_word"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/baloo_regular"
            android:text="@string/amount_40"
            android:id="@+id/textViewAllPackageList"/>

    </RelativeLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/continue_button"
        android:id="@+id/buttonContinuePackageList"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>


